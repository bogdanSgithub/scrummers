<Window x:Class="Frontend_HomeBudget.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend_HomeBudget"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="150" Width="245"
        MaxHeight="150"
        MinHeight="150"
        MinWidth="245"
        MaxWidth="245"
        >
    <Grid>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock FontSize="12px" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Category Type:</TextBlock>
            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="CategoryTypes" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"></ComboBox>
            <TextBlock FontSize="12px" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top">Description:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100px" Margin="7,0,0,0" x:Name="Description"></TextBox>
            <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" Click="AddCategoryButton_Clicked" >Add</Button>
            <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" Click="CancelButton_Clicked">Cancel</Button>

        </Grid>


    </Grid>
</Window>
